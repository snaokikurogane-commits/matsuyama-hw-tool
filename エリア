<script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
<script>
    // エリアごとの全角キーワード定義
    const areaData = {
        "east": { title: "中心部東エリア", keywords: "番町　東雲　八坂　素鵞　桑原　道後　一番町　二番町　三番町　大街道　千舟町　湊町　花園町　持田町　平和通　道後　湯之町　石手" },
        "west": { title: "中心部西エリア", keywords: "新玉　雄郡　味酒　清水　大手町　南江戸　竹原　小栗　土居田　宮西　萱町　本町　清水町　山越　衣山" },
        "north": { title: "城北エリア", keywords: "潮見　久枝　和気　堀江　吉藤　谷町　平田町　久万ノ台　問屋町　西長戸　東長戸　和気町　太山寺町　堀江町" },
        "south": { title: "城南エリア", keywords: "石井　浮穴　荏原　坂本　東石井　西石井　居相　古川　はなみずき　和泉　今在家　北土居　天山　森松町" },
        "joto": { title: "城東エリア", keywords: "湯山　日浦　五明　伊台　小野　久米　平井町　鷹子町　来住町　北久米町　南久米町　福音寺町　梅本町　湯の山" },
        "josai": { title: "城西エリア", keywords: "三津浜　宮前　高浜　味生　生石　垣生　余土　三津　住吉　高浜町　北吉田町　南吉田町　空港通　斎院町　余戸　保免" },
        "hojo": { title: "北条エリア", keywords: "浅海　立岩　難波　正岡　北条　河野　粟井　北条辻　土手内　柳原　中西　下難波　上難波　光洋台" },
        "island": { title: "忽那諸島", keywords: "泊　由良　睦野　東中島　西中島　神和　由良町　泊町　睦月　中島大浦　津和地　怒和" }
    };

    // URLパラメータからエリアを取得 (例: ?area=south)
    const urlParams = new URLSearchParams(window.location.search);
    const areaKey = urlParams.get('area') || 'east';
    const data = areaData[areaKey];

    // 表示の更新
    document.getElementById('area-title').innerText = data.title;
    document.getElementById('keyword-display').innerText = data.keywords;

    // コピー機能
    document.getElementById('copy-btn').addEventListener('click', () => {
        navigator.clipboard.writeText(data.keywords).then(() => {
            alert("キーワードをコピーしました！");
        });
    });

    // 検索サイトへ遷移
    document.getElementById('search-btn').addEventListener('click', () => {
        // ハローワークの検索条件入力画面へ
        window.location.href = "https://www.hellowork.mhlw.go.jp/kensaku/GECA110010.do";
    });

    // LIFF初期化
    liff.init({ liffId: "YOUR_LIFF_ID" }).then(() => {
        if (!liff.isLoggedIn()) { liff.login(); }
    });
</script>

